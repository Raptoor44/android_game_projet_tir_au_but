<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableauScore">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="406dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:text="Meilleur score :"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/id_activity_tableau_score_meilleur_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_activity_tableau_score_bouton_retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="56dp"
        android:text="retour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/id_activity_tableau_score_supprimer" />

    <Button
        android:id="@+id/id_activity_tableau_score_supprimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:text="Supprier tous les scores"
        app:layout_constraintEnd_toEndOf="@+id/id_activity_tableau_score_list_view"
        app:layout_constraintTop_toBottomOf="@+id/id_activity_tableau_score_list_view" />

    <ListView
        android:id="@+id/id_activity_tableau_score_list_view"
        android:layout_width="422dp"
        android:layout_height="448dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/id_activity_tableau_score_bouton_retour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/id_activity_tableau_score_meilleur_score"
        android:layout_width="411dp"
        android:layout_height="106dp"
        android:layout_marginBottom="583dp"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>