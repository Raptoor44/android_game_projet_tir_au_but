<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllerView.TableauScore">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="341dp"
        android:layout_height="0dp"
        android:layout_marginTop="38dp"
        android:text="Meilleur score :"
        android:textColor="#FFC107"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_activity_tableau_score_bouton_retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="56dp"
        android:text="retour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/id_activity_tableau_score_supprimer"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_activity_tableau_score_list_view" />

    <Button
        android:id="@+id/id_activity_tableau_score_supprimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:text="Supprier tous les scores"
        app:layout_constraintBaseline_toBaselineOf="@+id/id_activity_tableau_score_bouton_retour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_activity_tableau_score_bouton_retour" />

    <ListView
        android:id="@+id/id_activity_tableau_score_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/id_activity_tableau_score_bouton_retour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_activity_tableau_score_meilleur_score" />

    <TextView
        android:id="@+id/id_activity_tableau_score_meilleur_score"
        android:layout_width="269dp"
        android:layout_height="73dp"
        android:layout_marginBottom="1dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/id_activity_tableau_score_list_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/id_activity_tableau_score_garder5premiers"
        android:layout_width="181dp"
        android:layout_height="56dp"
        android:layout_marginBottom="4dp"
        android:text="Garder les 5 premiers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>