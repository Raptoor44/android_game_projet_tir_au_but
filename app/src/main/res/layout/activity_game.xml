<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <ImageView
        android:id="@+id/id_but"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="501dp"
        app:layout_constraintBottom_toTopOf="@+id/id_score_courant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/id_bande_gauche"
        android:layout_width="90dp"
        android:layout_height="94dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="462dp"
        app:layout_constraintBottom_toTopOf="@+id/id_score_courant"
        app:layout_constraintEnd_toStartOf="@+id/id_bande_droite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jersey_viscose_uni_couleur_noir_profond" />

    <ImageView
        android:id="@+id/id_bande_droite"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:layout_marginBottom="463dp"
        app:layout_constraintBottom_toTopOf="@+id/id_score_courant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_bande_gauche"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jersey_viscose_uni_couleur_noir_profond" />

    <TextView
        android:id="@+id/id_score_courant"
        android:layout_width="408dp"
        android:layout_height="82dp"
        android:layout_marginBottom="4dp"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fenetre_principale" />

    <RelativeLayout
        android:id="@+id/fenetre_principale"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/id_score_courant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="269dp"
            android:layout_height="match_parent">

        </FrameLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>